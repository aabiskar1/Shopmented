<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    tools:context=".products_card">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/product_list_card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_card_img_view"
                android:layout_width="200dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/product_card_product_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/product_card_img_view"
                android:text="Product Name" />

            <TextView
                android:id="@+id/product_card_product_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_card_product_name_tv"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/product_card_img_view"
                android:text="Product Name" />

            <TextView
                android:id="@+id/product_card_product_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_card_product_description_tv"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/product_card_img_view"
                android:text="Product Name" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>