<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteCardColor"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/veryLightGrey"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/home_user_greeting_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar"
                android:background="@color/veryLightGrey">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right"
                    android:elevation="18dp"
                    android:src="@drawable/sunshine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/veryLightGrey"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/corner_curve_right"
                        android:paddingLeft="40dp">

                        <LinearLayout
                            android:layout_width="379dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/home_salutation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:text="WELCOME, AABISKAR"
                                android:textColor="@color/white"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed-medium"
                                android:text="What do you wanna buy today?"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/veryLightGrey" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/white_rounded_btn"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/home_search_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_search_grey_24dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/home_search_icon"
                        android:background="@drawable/white_rounded_btn"
                        android:hint="SEARCH"
                        android:maxLines="1" />
                </RelativeLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/home_banner_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/home_user_greeting_layout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="10dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_banner_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                </androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/home_topics_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/imageView2"
                android:layout_below="@id/home_banner_card"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">


                <LinearLayout
                    android:id="@+id/shop_cat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:id="@+id/home_chairLayout"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_sofa" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@id/imageView"
                                android:gravity="center"
                                android:text="SOFA"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:id="@+id/home_sofaLayout"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="2dp"

                            android:background="@color/colorPrimary">

                            <ImageView
                                android:id="@+id/chair_imgView"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_010_chair" />

                            <TextView
                                android:id="@+id/chairLbl"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/chair_imgView"
                                android:gravity="center"
                                android:text="CHAIR"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shop_cat2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shop_cat1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:id="@+id/home_chairLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_sofa" />

                            <TextView
                                android:id="@+id/textView41"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@id/imageView1"
                                android:gravity="center"
                                android:text="SOFA"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:id="@+id/home_sofaLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="2dp"

                            android:background="@color/colorPrimary">

                            <ImageView
                                android:id="@+id/chair_imgView1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_010_chair" />

                            <TextView
                                android:id="@+id/chairLbl1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/chair_imgView1"
                                android:gravity="center"
                                android:text="CHAIR"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shop_cat3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/shop_cat2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:id="@+id/home_chairLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginEnd="2dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimary">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_sofa" />

                            <TextView
                                android:id="@+id/textView42"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_toRightOf="@id/imageView12"
                                android:gravity="center"
                                android:text="SOFA"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:elevation="4dp"
                        app:cardCornerRadius="10dp">

                        <RelativeLayout
                            android:id="@+id/home_sofaLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginStart="2dp"

                            android:background="@color/colorPrimary">

                            <ImageView
                                android:id="@+id/chair_imgView1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@drawable/ic_010_chair" />

                            <TextView
                                android:id="@+id/chairLbl1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/chair_imgView1"
                                android:gravity="center"
                                android:text="CHAIR"
                                android:textColor="@color/white"
                                android:textSize="18sp" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/home_banner" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>